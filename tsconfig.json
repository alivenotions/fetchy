{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2016", "DOM"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true
  },
  "exclude": ["lib", "node_modules", "src/**/*.spec.ts"],
  "include": ["src"]
}
